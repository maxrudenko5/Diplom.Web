@model Diplom.ViewModels.SystemAdministration.User.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}
<div class="block-header">
    <h2>User</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-body card-padding">
            <div class="form-horizontal">
                <h4>EditUserViewModel</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.UserName)
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.AllExitstRoles, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(x => x.SelectedRoleId, Model.AllExitstRoles.Select(x => new SelectListItem() { Text = x.Name, Value = x.Id }).ToList(), Resources.Resources.DropDownListSelectValue, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SelectedRoleId, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
